<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_screen_bg"
    tools:context="com.wolfscore.activity.HomeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Header_bg"
        android:minHeight="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/navigation_icon"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_8sdp"
                android:src="@drawable/ic_football"
                android:visibility="gone" />
            <RelativeLayout
                android:id="@+id/rl_search"
                android:layout_toLeftOf="@+id/right_layout"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/_25sdp"
                android:layout_margin="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/search_bg">

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/ic_search" />

                <TextView
                    android:id="@+id/et_search"
                    style="@style/SmallRobotoRegularStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/iv_search"
                    android:layout_toRightOf="@id/iv_search"
                    android:text="@string/search"
                    android:inputType="text"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite" />


            </RelativeLayout>


            <EditText
                android:visibility="gone"
                android:id="@+id/search_edt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_4sdp"
                android:layout_toLeftOf="@+id/right_layout"
                android:background="@drawable/search_edt_bg"
                android:drawableLeft="@drawable/search_icon"
                android:hint="search"
                android:textSize="@dimen/_14sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:textColorHint="@color/colorWhite" />

            <RelativeLayout
                android:layout_marginTop="@dimen/_4sdp"
                android:id="@+id/right_layout"
                android:layout_width="@dimen/_60sdp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                >

                <ImageView
                    android:id="@+id/calender"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_toLeftOf="@+id/filter"
                    android:src="@drawable/ic_calendar"
                    android:padding="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/filter"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_filter"
                    android:padding="@dimen/_4sdp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="Cancel"
                    android:visibility="gone"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_16sdp" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout

        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/Header_bg"

        >

    </FrameLayout>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/search_fragment"
        android:layout_width="match_parent"
        android:layout_above="@+id/ll"
        android:layout_height="match_parent">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/home_screen_bg"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp">

            <LinearLayout
                android:id="@+id/match_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/match_img"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="center"
                    android:tint="@color/colorBlue"
                    android:src="@drawable/soccer_match"
                    />

                <TextView
                    android:id="@+id/match"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Matches"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/_10sdp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/live_score_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/live_score_img"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="center"
                    android:tint="@color/inactive_txt"
                    android:src="@drawable/live_score"
                    />

                <TextView
                    android:id="@+id/live_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Live Score"
                    android:textColor="@color/inactive_txt"
                    android:textSize="@dimen/_10sdp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/league_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/league_img"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="center"
                    android:tint="@color/inactive_txt"
                    android:src="@drawable/league"
                    />

                <TextView
                    android:id="@+id/league"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Leagues"
                    android:textColor="@color/inactive_txt"
                    android:textSize="@dimen/_10sdp" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/news_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/news_img"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="center"
                    android:tint="@color/inactive_txt"
                    android:src="@drawable/newspaper"
                    />

                <TextView
                    android:id="@+id/news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="News"
                    android:textColor="@color/inactive_txt"
                    android:textSize="@dimen/_10sdp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/highlight_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/highlight_img"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="center"
                    android:tint="@color/inactive_txt"
                    android:src="@drawable/highlight"
                    />

                <TextView
                    android:id="@+id/highlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Highlight"
                    android:textColor="@color/inactive_txt"
                    android:textSize="@dimen/_10sdp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
