<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">


    <RelativeLayout
        android:id="@+id/rl_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_player"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_player">

            <TextView
                android:id="@+id/tv_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dden Hazards"
                android:textColor="@color/colorWhite" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_nation_flag"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_below="@id/tv_team_name"
                android:src="@drawable/australia"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/tv_nation_name"
                style="@style/SmallRobotoLightStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_team_name"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toRightOf="@+id/iv_nation_flag"
                android:text="south africa"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_8sdp" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_plus"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_plus_icon" />

        <ImageView
            android:id="@+id/iv_select_team"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/blue_circle_bg"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_right_tick"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_view"
        android:layout_marginLeft="@dimen/_42sdp"
        android:layout_marginStart="@dimen/_42sdp"
        android:background="@color/colorBalck1" />


</RelativeLayout>