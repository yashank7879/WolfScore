<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp"
    android:background="@color/colorExtraDarkGray"
    >

    <LinearLayout
        android:id="@+id/league_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_team"
        android:src="@color/colorWhite"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp" />

    <TextView
        android:id="@+id/tv_team_name"
        style="@style/SmallRobotoMediumStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_team"
        android:text="team"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_toEndOf="@id/iv_team"
        android:textColor="@color/colorWhite"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_5sdp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_star"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_white_star3x"
        android:layout_alignParentEnd="true" />

</RelativeLayout>