<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:background="@color/colorExtraDarkGray"
        >

        <LinearLayout
            android:id="@+id/league_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_toLeftOf="@+id/iv_plus"
            android:layout_marginLeft="@dimen/_8sdp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_team"
                android:src="@color/colorWhite"
                android:padding="@dimen/_1sdp"
                android:background="@drawable/circle_white_bg"
                android:layout_gravity="center"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp" />

            <TextView
                android:id="@+id/tv_team_name"
                style="@style/SmallRobotoMediumStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_team"
                android:text="team"
                android:textSize="@dimen/_11sdp"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_toEndOf="@id/iv_team"
                android:textColor="@color/colorWhite"
                android:layout_marginStart="@dimen/_5sdp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_plus"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/ic_plus_icon" />

        <ImageView
            android:id="@+id/iv_select_team"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/blue_circle_bg"
            android:padding="@dimen/_4sdp"
            android:layout_margin="@dimen/_8sdp"
            android:src="@drawable/ic_right_tick"
            android:visibility="gone" />
    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/colorPrimary"/>
</LinearLayout>