<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SwitchTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorBlue</item>
    </style>


    <style name="Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="SmallRobotoLightStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="mediumRobotoLightStyle">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="largeRobotoLightStyle">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="SmallRobotoMediumStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="mediumRobotoMediumStyle">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="largeRobotoMediumStyle">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="SmallRobotoRegularStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="mediumRobotoRegularStyle">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="largeRobotoRegularStyle">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
</resources>
